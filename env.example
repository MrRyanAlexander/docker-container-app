# Auth0 Configuration
# Get these values from your Auth0 dashboard
AUTH0_SECRET=your-super-secret-jwt-key-at-least-32-chars-long
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-domain.us.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=peruser
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/peruser

# Node Environment
NODE_ENV=development

# Container Management
MAX_USER_CONTAINERS=100
CONTAINER_TIMEOUT_MINUTES=30
CONTAINER_MAX_CPU=0.5
CONTAINER_MAX_MEMORY=512

# Kubernetes Configuration (for production)
KUBECONFIG_PATH=/path/to/kubeconfig
NAMESPACE=default
STORAGE_CLASS=default

# Traefik Configuration
TRAEFIK_API_INSECURE=true
ACME_EMAIL=admin@example.com

# Redis (for session storage in production)
REDIS_URL=redis://localhost:6379

# Application Settings
APP_NAME="Per-User Container App"
APP_URL=http://localhost:3000
SUPPORT_EMAIL=support@example.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 